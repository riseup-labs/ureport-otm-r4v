<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_below="@+id/r4v"
                android:id="@+id/program_logo"
                android:src="@drawable/v2_bolivia_logo"
                android:layout_marginStart="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:gravity="start|center"
                android:layout_below="@+id/r4v"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/program_logo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/textAppName"
                    android:textSize="20sp"
                    style="@style/boldText"
                    android:text="U-Report Application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textSubtitle"
                    android:textSize="17sp"
                    style="@style/boldText"
                    android:text="Your voice matters!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <ImageView
                android:id="@+id/r4v"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:src="@drawable/v2_r4v_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:id="@+id/your_rights"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp">

                            <LinearLayout
                                android:weightSum="5"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_gravity="end|center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_weight="4"
                                    android:padding="10dp"
                                    android:src="@drawable/v2_your_rights"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>

                                <TextView
                                    android:id="@+id/your_rights_text"
                                    android:layout_weight="1"
                                    style="@style/boldText"
                                    android:text="@string/your_rights"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/polls"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="25dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp">

                            <LinearLayout
                                android:weightSum="5"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_gravity="end|center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_weight="4"
                                    android:padding="10dp"
                                    android:src="@drawable/v2_polls"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>

                                <TextView
                                    android:id="@+id/polls_text"
                                    android:layout_weight="1"
                                    style="@style/boldText"
                                    android:text="@string/polls"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:id="@+id/results"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp">

                            <LinearLayout
                                android:weightSum="5"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_gravity="end|center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_weight="4"
                                    android:padding="10dp"
                                    android:src="@drawable/v2_result"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>

                                <TextView
                                    android:id="@+id/btnTextResults"
                                    android:layout_weight="1"
                                    style="@style/boldText"
                                    android:text="@string/v1_ureport_results"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/stories"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="25dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp">

                            <LinearLayout
                                android:weightSum="5"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_gravity="end|center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_weight="4"
                                    android:padding="10dp"
                                    android:src="@drawable/v2_stories"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>

                                <TextView
                                    android:id="@+id/btnTextStories"
                                    android:layout_weight="1"
                                    style="@style/boldText"
                                    android:text="@string/v1_stories"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp">

                            <LinearLayout
                                android:id="@+id/about"
                                android:weightSum="5"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_gravity="end|center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_weight="4"
                                    android:padding="10dp"
                                    android:src="@drawable/v2_about"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>

                                <TextView
                                    android:id="@+id/about_text"
                                    android:layout_weight="1"
                                    style="@style/boldText"
                                    android:text="@string/about"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/settings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="25dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp">

                            <LinearLayout
                                android:weightSum="5"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_gravity="end|center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_weight="4"
                                    android:padding="10dp"
                                    android:src="@drawable/v2_settings"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>

                                <TextView
                                    android:id="@+id/btnTextSettings"
                                    android:layout_weight="1"
                                    style="@style/boldText"
                                    android:text="@string/v1_settings"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/pendingOpinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/v1_card_bg_reports"
                android:gravity="center|center_horizontal|center_vertical"
                android:minWidth="35dp"
                android:minHeight="35dp"
                android:padding="1dp"
                tools:text="999"
                android:textAlignment="gravity"
                android:textColor="@color/pending_button_text"
                android:textSize="12sp"
                android:visibility="visible"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>