<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.auth.LoginActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_bg_start_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="182dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_bg_end_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="177dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_bg_bottom_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="169dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_bg_bottom_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="141dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Login progress -->
            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <ScrollView
                android:id="@+id/login_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/program_logo"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginTop="96dp" />

                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/action_sign_in"
                                    android:textColor="@color/black"
                                    android:textSize="36sp"
                                    style="@style/boldText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingTop="@dimen/activity_vertical_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin">

                                <TextView
                                    android:id="@+id/text_error_message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:background="@drawable/chat_bubble_out"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="Error Message"
                                    android:textColor="@android:color/holo_red_light"
                                    android:textSize="18dp"
                                    android:visibility="gone"

                                    />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="12dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imageView2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/v1_icon_username" />

                                        <AutoCompleteTextView
                                            android:id="@+id/email"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:background="@color/white"
                                            android:hint="@string/prompt_email"
                                            android:inputType="textEmailAddress"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="@color/black"
                                            android:textColorHint="@android:color/tertiary_text_light"
                                            android:theme="@style/LoginTheme" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:layout_marginTop="16dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="12dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imageView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#00FFFFFF"
                                            app:srcCompat="@drawable/v1_icon_password" />

                                        <EditText
                                            android:id="@+id/password"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:background="@color/white"
                                            android:hint="@string/prompt_password"
                                            android:imeActionLabel="@string/action_sign_in_short"
                                            android:imeOptions="actionUnspecified"
                                            android:inputType="textPassword"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="@color/black"
                                            android:textColorHint="@android:color/tertiary_text_light"
                                            android:theme="@style/LoginTheme" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                    <RelativeLayout
                                        android:background="@drawable/program_chooser_button_bg"
                                        android:id="@+id/email_sign_in_button"
                                        android:layout_width="250dp"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="30dp">
                                        <ImageView
                                            android:layout_centerVertical="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_marginStart="20dp"
                                            android:id="@+id/imageView7"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            app:srcCompat="@drawable/v2_sign_in" />

                                        <TextView
                                            android:textAlignment="center"
                                            android:layout_centerVertical="true"
                                            android:id="@+id/textView9"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:text="@string/action_sign_in"
                                            android:textColor="@color/white"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </RelativeLayout>

                                <TextView
                                    android:id="@+id/btnSkipLogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="4dp"
                                    android:gravity="center"
                                    android:text="@string/skip_login"
                                    android:onClick="skipLlogin"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/create_account_link"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_horizontal"
                                android:onClick="onCreateAccount"
                                android:padding="10dp"
                                android:text="@string/create_account"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:visibility="gone" />

                        </LinearLayout>

                </LinearLayout>


            </ScrollView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>