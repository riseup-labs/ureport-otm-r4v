<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.stories.list.StoriesListFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_above="@+id/layout_footer"
            android:id="@+id/swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/search_layout"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="4dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:background="@drawable/search_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="18sp"
                            android:text="@string/search"
                            android:textColor="@color/light_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginEnd="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_arrow_drop_down"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/search_layout"
                    android:id="@+id/recyclerView"
                    android:background="@color/white"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_stories"/>
                <ProgressBar
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:id="@+id/emptyListWarning"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:paddingBottom="30dp"
                android:id="@+id/loadingLayout"
                android:weightSum="10"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:background="@color/black"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        tools:text="Fetching Data"
                        android:id="@+id/loadingTvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        tools:text="(24/40)"
                        android:id="@+id/loadingTvProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ProgressBar
                    android:indeterminate="false"
                    android:id="@+id/progressBar"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:progressTint="@color/primary"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/primary"
                    android:indeterminateTintMode="multiply"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    />

            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:paddingBottom="30dp"
                android:id="@+id/no_internet_layout"
                android:weightSum="10"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:background="@color/black"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_toStartOf="@+id/btnRetry"
                    android:text="@string/no_internet_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/btnHide"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/primary_dark"
                    android:text="@string/retry"
                    android:id="@+id/btnRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/hide"
                    android:id="@+id/btnHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>